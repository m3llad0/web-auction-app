{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES6"],                                    
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "inlineSourceMap": true,                         
    "outDir": "lib",
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                        
    "skipLibCheck": true,
    "types": ["jest"]                             

  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}